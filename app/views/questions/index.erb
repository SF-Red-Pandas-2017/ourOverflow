<h1>Questions</h1>

<ul>
  <% @questions.each do |question| %>
    <li><a href="/questions/<%= question.id %>"><%= question.title %></a></li>
    <li><%= question.body %></li>

    <li><form action="/questions/<%=question.id %>/comments/new" method="GET">
    <input type="submit" value="Comment"></form></li>

     <li><form action="/questions/<%=question.id %>/answers/new" method="GET">
    <input type="submit" value="Answer"></form></li>
  <% end %>
</ul>



